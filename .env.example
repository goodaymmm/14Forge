# ========================================
# 14Forge Environment Variables Template
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ========================================
# Riot Games API
# ========================================
# Get your API key from: https://developer.riotgames.com
# Note: Development keys expire every 24 hours
RIOT_API_KEY=RGAPI-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ========================================
# Database Configuration
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lol_stats
DB_USER=postgres
DB_PASSWORD=postgres

# Optional: Connection pool settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=10000

# ========================================
# BrightData Configuration
# ========================================
# Get credentials from: https://brightdata.com
BRIGHTDATA_USERNAME=brd-customer-xxxxxxxx-zone-xxxxxxxx
BRIGHTDATA_PASSWORD=your_brightdata_password
BRIGHTDATA_ZONE=lol_stats_unlocker
BRIGHTDATA_CONCURRENT_REQUESTS=3

# ========================================
# AI Services
# ========================================
# OpenAI API (GPT-4)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Gemini API
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Anthropic Claude API (if using)
# CLAUDE_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# n8n Configuration
# ========================================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_WEBHOOK_URL=http://localhost:5678
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=password

# ========================================
# Application Settings
# ========================================
# Backend API
API_PORT=3000
API_HOST=localhost
LOG_LEVEL=debug

# Frontend
VITE_API_BASE_URL=http://localhost:3000

# Cache TTL (in seconds)
CACHE_TTL_RIOT_API=300        # 5 minutes
CACHE_TTL_AI_ANALYSIS=21600   # 6 hours
CACHE_TTL_META_DATA=3600      # 1 hour

# ========================================
# Security
# ========================================
# JWT Secret (for future authentication features)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS settings
CORS_ORIGIN=http://localhost:5173

# ========================================
# Feature Flags (Optional)
# ========================================
ENABLE_AI_COACHING=true
ENABLE_HEATMAP=true
ENABLE_META_ANALYSIS=true
ENABLE_DEBUG_MODE=false

# ========================================
# External Services (Optional)
# ========================================
# Discord Webhook (for notifications)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/xxxxx

# Sentry (for error tracking)
# SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# ========================================
# Docker Settings (if using Docker)
# ========================================
COMPOSE_PROJECT_NAME=14forge
POSTGRES_VERSION=15
N8N_VERSION=latest